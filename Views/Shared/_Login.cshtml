@model AplicacionPrueba.Models.LoginView

<h4>Iniciar Sesión </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Usuario" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-inline">
                <input type="submit" value="Entrar" class="btn btn-dark" />
                <a class="nav-link text-blue" asp-area="" asp-controller="Usuario" asp-action="RecuperaPass">Olvidaste tu Contraseña</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}