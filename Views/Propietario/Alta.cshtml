@model AplicacionPrueba.Models.Propietario

@{
    ViewData["Title"] = "Altas";
}

@if(!User.Identity.IsAuthenticated)
 {
     await Html.RenderPartialAsync("_Login", new LoginView());
 }
else
{

<h1>Altas de Propietarios</h1>

<div class="container">
    <div>
        <form method="post" asp-action="Alta">
            <div class="form-group">
                <label for="dni_id" class="control-label">DNI</label>
                <input type="text" class="form-control" id="dni_id" name="dni" placeholder="Dni">
            </div>
            <div class="form-group">
                <label for="name_id" class="control-label">Nombre</label>
                <input type="text" class="form-control" id="name_id" name="nombre" placeholder="Nombre">
            </div>
            <div class="form-group">
                <label for="dire" class="control-label">Direccion</label>
                <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Direccion">
            </div>
            <div class="form-group">
                <label for="dire" class="control-label">Telefono</label>
                <input type="text" class="form-control" id="tel" name="tel" placeholder="Telefono">
            </div>
            <input type="submit" value="Confirmar" />
        </form>
    </div>
</div>
}