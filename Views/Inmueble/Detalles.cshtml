@model AplicacionPrueba.Models.Inmueble

@{
    ViewData["Title"] = "Detalles de Inmueble";
}

@if(!User.Identity.IsAuthenticated)
 {
     await Html.RenderPartialAsync("_Login", new LoginView());
 }
 else
 {

<style>
  .image img {
  width: 220px;
  height: auto;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
}
.my-form {
  padding: 2.5rem;
}
</style>

<h1>Datalles del Inmueble: @Model.Direccion_in</h1>

<div class="container">
    <div class="col-md-7">
        <div class="form d-flex justify-content-between">
            <div class="image">
                @if (Model.foto != "")
                {
                    <img src="@Model.foto" height="100" width="100" style="border-radius: 40px; margin: 20px 0 0 10px;border: 2px solid #fff;"/> 
                }
                else
                {
                    <p>Sin Foto</p>
                }
            </div>
       <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_inmu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion_in)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>          
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.Id_inmu
            </td>
            <td>
                @Model.Direccion_in
            </td>
            <td>
                $ @Model.precio
            </td>
            <td>
                @Model.Tipo
            </td>
            <td>
                @Model.Uso
            </td>
            <td>
                <i class="fa fa-edit"></i>
                @Html.ActionLink("Editar", "Editar", new { id=Model.Id_inmu})                
            </td>
            <td>
                <i class="fa fa-trash"></i>
                @Html.ActionLink("Eliminar", "Delete", new { id=Model.Id_inmu}, new{ onclick = "return confirm('Borrar el Inmueble Ubicado en: " + @Model.Direccion_in +"?')" })
            </td>
        </tr>
    </tbody>
    </table> 
    </div>
    </div>
    <br>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
        <a asp-action="Alta" asp-controller="Contrato" class="btn btn-primary">Contratar</a>
    </div>
</div>
 }
